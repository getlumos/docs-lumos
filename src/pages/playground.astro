---
// LUMOS Interactive Playground
// Real-time code generation from .lumos schemas
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LUMOS Playground - Interactive Code Generator</title>
    <meta name="description" content="Write LUMOS schemas and see generated Rust and TypeScript code in real-time" />

    <!-- Monaco Editor CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs/editor/editor.main.min.css" />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        height: 100vh;
        overflow: hidden;
        background: #1e1e1e;
        color: #d4d4d4;
      }

      .header {
        background: #2d2d30;
        padding: 1rem 2rem;
        border-bottom: 1px solid #3e3e42;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .header h1 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #fff;
      }

      .header a {
        color: #4fc3f7;
        text-decoration: none;
        font-size: 0.9rem;
      }

      .header a:hover {
        text-decoration: underline;
      }

      .container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        height: calc(100vh - 60px);
        gap: 1px;
        background: #3e3e42;
      }

      .panel {
        background: #1e1e1e;
        display: flex;
        flex-direction: column;
      }

      .panel-header {
        background: #2d2d30;
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #3e3e42;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .panel-content {
        flex: 1;
        overflow: hidden;
      }

      .editor {
        height: 100%;
      }

      .examples {
        display: flex;
        gap: 0.5rem;
      }

      .example-btn {
        background: #0e639c;
        color: white;
        border: none;
        padding: 0.4rem 0.8rem;
        border-radius: 3px;
        cursor: pointer;
        font-size: 0.75rem;
        transition: background 0.2s;
      }

      .example-btn:hover {
        background: #1177bb;
      }

      .error {
        background: #5a1d1d;
        color: #f48771;
        padding: 1rem;
        margin: 1rem;
        border-left: 3px solid #f14c4c;
        border-radius: 3px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        white-space: pre-wrap;
      }

      .loading {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #888;
        font-size: 0.9rem;
      }

      @media (max-width: 1200px) {
        .container {
          grid-template-columns: 1fr;
          grid-template-rows: 1fr 1fr 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h1>üîÆ LUMOS Playground</h1>
      <div>
        <a href="/">‚Üê Back to Docs</a>
      </div>
    </div>

    <div class="container">
      <div class="panel">
        <div class="panel-header">
          <span>.lumos Schema</span>
          <div class="examples">
            <button class="example-btn" data-example="account">Account</button>
            <button class="example-btn" data-example="enum">Enum</button>
            <button class="example-btn" data-example="complex">Complex</button>
          </div>
        </div>
        <div class="panel-content">
          <div id="editor-lumos" class="editor"></div>
        </div>
      </div>

      <div class="panel">
        <div class="panel-header">Generated Rust</div>
        <div class="panel-content">
          <div id="editor-rust" class="editor"></div>
        </div>
      </div>

      <div class="panel">
        <div class="panel-header">Generated TypeScript</div>
        <div class="panel-content">
          <div id="editor-typescript" class="editor"></div>
        </div>
      </div>
    </div>

    <!-- Monaco Editor -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs/loader.min.js"></script>

    <script type="module">
      // Example schemas
      const examples = {
        account: `#[solana]
#[account]
struct PlayerAccount {
    wallet: PublicKey,
    level: u16,
    experience: u64,
    inventory: [PublicKey],
}`,
        enum: `#[solana]
enum GameState {
    Active,
    Paused { reason: String },
    Finished { winner: PublicKey, score: u64 },
}`,
        complex: `#[solana]
#[account]
struct Marketplace {
    authority: PublicKey,
    fee_percentage: u16,
}

#[solana]
struct ListingData {
    seller: PublicKey,
    nft_mint: PublicKey,
    price: u64,
    listed_at: i64,
    buyer: Option<PublicKey>,
}

#[solana]
enum ListingStatus {
    Active,
    Sold,
    Cancelled,
}`
      };

      let lumosEditor, rustEditor, typescriptEditor;
      let generateCode, isWasmReady = false;

      // Initialize Monaco Editor
      require.config({ paths: { vs: 'https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.45.0/min/vs' } });

      require(['vs/editor/editor.main'], function () {
        // LUMOS Editor (input)
        lumosEditor = monaco.editor.create(document.getElementById('editor-lumos'), {
          value: examples.account,
          language: 'rust', // Use Rust syntax highlighting for .lumos
          theme: 'vs-dark',
          automaticLayout: true,
          minimap: { enabled: false },
          fontSize: 14,
          lineNumbers: 'on',
          scrollBeyondLastLine: false,
          wordWrap: 'on',
        });

        // Rust Editor (output)
        rustEditor = monaco.editor.create(document.getElementById('editor-rust'), {
          value: '// Generating...',
          language: 'rust',
          theme: 'vs-dark',
          automaticLayout: true,
          minimap: { enabled: false },
          fontSize: 14,
          readOnly: true,
          lineNumbers: 'on',
          scrollBeyondLastLine: false,
          wordWrap: 'on',
        });

        // TypeScript Editor (output)
        typescriptEditor = monaco.editor.create(document.getElementById('editor-typescript'), {
          value: '// Generating...',
          language: 'typescript',
          theme: 'vs-dark',
          automaticLayout: true,
          minimap: { enabled: false },
          fontSize: 14,
          readOnly: true,
          lineNumbers: 'on',
          scrollBeyondLastLine: false,
          wordWrap: 'on',
        });

        // Load WASM module
        loadWasm();

        // Listen for input changes
        lumosEditor.onDidChangeModelContent(() => {
          if (isWasmReady) {
            debounceGenerate();
          }
        });

        // Example buttons
        document.querySelectorAll('[data-example]').forEach(btn => {
          btn.addEventListener('click', () => {
            const example = btn.dataset.example;
            lumosEditor.setValue(examples[example]);
          });
        });
      });

      // Load WASM module
      async function loadWasm() {
        try {
          // Import WASM module
          const wasm = await import('/wasm/lumos_core.js');

          // Initialize WASM (loads the .wasm file)
          await wasm.default('/wasm/lumos_core_bg.wasm');

          generateCode = wasm.generateCode;
          isWasmReady = true;

          // Generate initial code
          generate();
        } catch (error) {
          console.error('Failed to load WASM:', error);
          rustEditor.setValue(`Error loading WASM module:\n${error.message}`);
          typescriptEditor.setValue(`Error loading WASM module:\n${error.message}`);
        }
      }

      // Debounced code generation
      let debounceTimer;
      function debounceGenerate() {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(generate, 500);
      }

      // Generate code from schema
      function generate() {
        const source = lumosEditor.getValue();

        try {
          const result = generateCode(source);

          // Update editors
          rustEditor.setValue(result.rust);
          typescriptEditor.setValue(result.typescript);
        } catch (error) {
          // Show error in both editors
          const errorMsg = `// ‚ùå Generation Error:\n//\n// ${error.message.split('\n').join('\n// ')}`;
          rustEditor.setValue(errorMsg);
          typescriptEditor.setValue(errorMsg);
        }
      }
    </script>
  </body>
</html>
